{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2020",                             
      "rootDir": ".",                                  
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,
      "strict": true,                                      
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "./src/**/*",
      "**/*.test.ts"
    ],
    "exclude": [
      "node_modules",
    ],
  }
  
  